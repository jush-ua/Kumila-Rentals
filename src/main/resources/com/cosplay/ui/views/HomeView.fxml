<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>

<!-- Root container: vertical layout for all sections -->
<VBox xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.cosplay.ui.controllers.HomeController"
      spacing="10" alignment="TOP_CENTER" style="-fx-background-color: #FFF;">

    <!-- ========================== -->
    <!-- Navigation Bar (Top Menu) -->
    <!-- ========================== -->


    <fx:include source="/com/cosplay/ui/views/components/NavBar.fxml" fx:id="navBar" />

    <!-- ========================== -->
    <!-- Information Banner Section -->
    <!-- ========================== -->
    <HBox spacing="20" alignment="CENTER" style="-fx-background-color: #fff4ed; -fx-padding: 15;">
        <!-- Mode of Delivery -->
        <VBox alignment="CENTER">
            <Label text="Mode of Delivery" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #d47f47;"/>
            <HBox spacing="5" alignment="CENTER">
                <ImageView fx:id="jtLogo" fitHeight="20" fitWidth="40"/>
                <ImageView fx:id="lalamoveLogo" fitHeight="20" fitWidth="40"/>
                <ImageView fx:id="lbcLogo" fitHeight="20" fitWidth="40"/>
            </HBox>
        </VBox>

        <!-- Location -->
        <VBox alignment="CENTER">
            <Label text="Location" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #d47f47;"/>
            <Label text="Santa Cruz, Laguna" style="-fx-font-size: 14px; -fx-text-fill: #b05e2f;"/>
        </VBox>

        <!-- Mode of Payment -->
        <VBox alignment="CENTER">
            <Label text="Mode of Payment" style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #d47f47;"/>
            <HBox spacing="5" alignment="CENTER">
                <ImageView fx:id="gcashLogo" fitHeight="20" fitWidth="40"/>
                <ImageView fx:id="mayaLogo" fitHeight="20" fitWidth="40"/>
            </HBox>
        </VBox>
    </HBox>

    <!-- ========================== -->
    <!-- Featured Sets Section -->
    <!-- ========================== -->
    <VBox alignment="CENTER" spacing="10" style="-fx-background-color: #f5c7a9; -fx-padding: 20;">
        <Label text="Featured Sets" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;"/>

        <!-- Cards Grid -->
        <HBox spacing="15" alignment="CENTER">
            <!-- Each card is a VBox with image and caption -->
            <VBox alignment="CENTER" spacing="5" style="-fx-background-color: white; -fx-padding: 10; -fx-border-radius: 10; -fx-background-radius: 10;">
                <ImageView fx:id="set1Image" fitHeight="180" fitWidth="120" preserveRatio="true"/>
                <Label fx:id="set1Title" text="Featured #1" style="-fx-text-fill: #d47f47; -fx-font-weight: bold;"/>
            </VBox>

            <VBox alignment="CENTER" spacing="5" style="-fx-background-color: white; -fx-padding: 10; -fx-border-radius: 10; -fx-background-radius: 10;">
                <ImageView fx:id="set2Image" fitHeight="180" fitWidth="120" preserveRatio="true"/>
                <Label fx:id="set2Title" text="Featured #2" style="-fx-text-fill: #d47f47; -fx-font-weight: bold;"/>
            </VBox>

            <VBox alignment="CENTER" spacing="5" style="-fx-background-color: white; -fx-padding: 10; -fx-border-radius: 10; -fx-background-radius: 10;">
                <ImageView fx:id="set3Image" fitHeight="180" fitWidth="120" preserveRatio="true"/>
                <Label fx:id="set3Title" text="Featured #3" style="-fx-text-fill: #d47f47; -fx-font-weight: bold;"/>
            </VBox>

            <VBox alignment="CENTER" spacing="5" style="-fx-background-color: white; -fx-padding: 10; -fx-border-radius: 10; -fx-background-radius: 10;">
                <ImageView fx:id="set4Image" fitHeight="180" fitWidth="120" preserveRatio="true"/>
                <Label fx:id="set4Title" text="Featured #4" style="-fx-text-fill: #d47f47; -fx-font-weight: bold;"/>
            </VBox>
        </HBox>
    </VBox>

</VBox>