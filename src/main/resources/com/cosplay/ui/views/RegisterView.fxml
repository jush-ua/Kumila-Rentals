<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox spacing="10" alignment="CENTER"
      xmlns="http://javafx.com/javafx/22"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.cosplay.ui.controllers.RegisterController">
  <Label text="Create an account"/>
    <TextField fx:id="usernameField" promptText="Username"/>
    <PasswordField fx:id="passwordField" promptText="Password"/>
    <TextField fx:id="emailField" promptText="Email"/>
    <HBox spacing="10" alignment="CENTER">
        <Button text="Back to Login" onAction="#goToLogin"/>
        <Button text="Register" onAction="#handleRegister"/>
    </HBox>
  <Label text="Note: This is a prototype UI." styleClass="muted"/>
  </VBox>
