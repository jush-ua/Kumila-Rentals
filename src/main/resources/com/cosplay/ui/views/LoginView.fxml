<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.cosplay.ui.controllers.LoginController"
            fx:id="rootPane"
            prefWidth="860" prefHeight="520">

    <!-- Two-column layout: left decorative panel, right form panel -->
    <HBox AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="0">
        <!-- Left decorative pane (image/background + branding) -->
        <AnchorPane prefWidth="430" minWidth="430" styleClass="left-panel" HBox.hgrow="ALWAYS">
            <VBox alignment="CENTER" spacing="10" AnchorPane.topAnchor="0" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
                <Region VBox.vgrow="ALWAYS"/>
                <ImageView fx:id="logoImage" fitWidth="180" fitHeight="180" preserveRatio="true" pickOnBounds="true" />
                <Label text="Kumila Rentals" styleClass="left-title" />
                <Label text="Wear your dream characters\netc...." styleClass="left-subtitle" />
                <Region VBox.vgrow="ALWAYS"/>
            </VBox>
        </AnchorPane>

        <!-- Right form panel -->
        <AnchorPane minWidth="430" styleClass="right-panel" HBox.hgrow="ALWAYS">
            <VBox alignment="CENTER" spacing="4" AnchorPane.topAnchor="30" AnchorPane.bottomAnchor="30" AnchorPane.leftAnchor="40" AnchorPane.rightAnchor="40">
                <Label text="LOGIN" styleClass="title-label"/>

                <VBox fx:id="textFieldPanel" spacing="8" alignment="TOP_LEFT" prefWidth="450" maxWidth="550">
                    <Label fx:id="errorLabel" text="" style="-fx-text-fill: transparent; -fx-font-size:12px;" />

                    <Label text="Email" styleClass="field-label"/>
                    <TextField fx:id="usernameField" promptText="" prefHeight="45" styleClass="rounded-field"/>

                    <Region prefHeight="8"/>

                    <Label text="Password" styleClass="field-label"/>
                    <PasswordField fx:id="passwordField" promptText="" prefHeight="45" styleClass="rounded-field"/>

                    <HBox>
                        <Region HBox.hgrow="ALWAYS"/>
                        <Label text="Forgot Password?" styleClass="forgot-label"/>
                    </HBox>
                </VBox>

                <Region prefHeight="10"/>

                <Button fx:id="loginButton" text="LOG IN"
                        onAction="#handleLogin"
                        prefWidth="200" prefHeight="50"
                        styleClass="accent-button"/>

                <HBox alignment="CENTER" spacing="10">
                    <Separator prefWidth="160" />
                    <Label text="or Login Using" styleClass="or-label"/>
                    <Separator prefWidth="160" />
                </HBox>

                <Button fx:id="googleLoginButton" onAction="#handleGoogleLogin"
                        prefWidth="200" prefHeight="50" styleClass="google-btn">
                    <graphic>
                        <HBox alignment="CENTER" spacing="8">
                            <ImageView fitWidth="16" fitHeight="16">
                                <image><Image url="@/com/cosplay/ui/images/google_logo.png"/></image>
                            </ImageView>
                            <Label text="GOOGLE" styleClass="google-label"/>
                        </HBox>
                    </graphic>
                </Button>

                <Hyperlink fx:id="goToRegister" text="Create Account" onAction="#goToRegister"
                           styleClass="create-account-link" />

            </VBox>
        </AnchorPane>
    </HBox>

</AnchorPane>
