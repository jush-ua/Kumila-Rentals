<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.cosplay.ui.controllers.CosplayDetailsController"
      spacing="0" minWidth="800" minHeight="600">
    
    <!-- Navigation Bar -->
    <fx:include source="/com/cosplay/ui/views/components/NavBar.fxml" fx:id="navBar" />
    
    <!-- Main Content Area -->
    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" style="-fx-background-color: white;">
        <VBox spacing="0" style="-fx-padding: 40 80; -fx-background-color: white;">
            
            <!-- Three Column Layout -->
            <HBox spacing="40">
                
                <!-- Left Column - Image with Category Tag -->
                <VBox spacing="15" style="-fx-min-width: 350; -fx-max-width: 350;">
                    <!-- Category Tag -->
                    <Label fx:id="lblCategoryTag" text="Mobile Legends: Bang Bang" 
                           style="-fx-background-color: #f5d99f; -fx-text-fill: #333; -fx-font-size: 14px; -fx-font-weight: bold; -fx-padding: 12 30; -fx-background-radius: 25;"/>
                    
                    <!-- Cosplay Image with Rounded Border -->
                    <StackPane style="-fx-background-color: #f5d99f; -fx-background-radius: 25; -fx-padding: 15;">
                        <ImageView fx:id="cosplayImage" fitWidth="320" fitHeight="400" preserveRatio="true"/>
                    </StackPane>
                </VBox>
                
                <!-- Middle Column - Product Details -->
                <VBox spacing="20" HBox.hgrow="SOMETIMES" style="-fx-min-width: 380; -fx-max-width: 450;">
                    
                    <!-- Product Title -->
                    <Label fx:id="lblCosplayName" text="Angela Floral Elf Skin" 
                           style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                    
                    <!-- Size Selection -->
                    <HBox spacing="10">
                        <Label fx:id="lblSize" text="Small-Large" 
                               style="-fx-font-size: 14px; -fx-text-fill: #666;"/>
                        <Button text="See Size Chart" onAction="#showSizeChart"
                                style="-fx-background-color: transparent; -fx-text-fill: #e6a84c; -fx-underline: true; -fx-cursor: hand;"/>
                    </HBox>
                    
                    <!-- Inclusions Section -->
                    <VBox spacing="12">
                        <Label text="Inclusions" 
                               style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                        <FlowPane fx:id="inclusionsFlow" hgap="8" vgap="8"/>
                    </VBox>
                    
                    <!-- Action Buttons -->
                    <HBox spacing="15" style="-fx-padding: 20 0 0 0;">
                        <StackPane fx:id="btnOrderQuote" style="-fx-background-color: #f5d99f; -fx-background-radius: 15; -fx-padding: 25 35; -fx-cursor: hand;">
                            <VBox spacing="8">
                                <Label text="$" style="-fx-font-size: 48px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                                <Label text="Order Quote" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                            </VBox>
                        </StackPane>
                        
                        <StackPane fx:id="btnOrderForm" style="-fx-background-color: #f5d99f; -fx-background-radius: 15; -fx-padding: 25 35; -fx-cursor: hand;">
                            <VBox spacing="8">
                                <Label text="═" style="-fx-font-size: 40px; -fx-text-fill: white; -fx-font-weight: bold;"/>
                                <Label text="Order Form" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: white;"/>
                            </VBox>
                        </StackPane>
                    </HBox>
                    
                </VBox>
                
                <!-- Right Column - Reserved Dates & Add-ons -->
                <VBox spacing="25" style="-fx-min-width: 280; -fx-max-width: 320;">
                    
                    <!-- Reserved Dates Section -->
                    <VBox spacing="12" style="-fx-border-color: #f5d99f; -fx-border-width: 3; -fx-border-radius: 15; -fx-padding: 20;">
                        <Label text="Reserved Dates" 
                               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333; -fx-background-color: #f5d99f; -fx-padding: 8 15; -fx-background-radius: 20;"/>
                        
                        <!-- Calendar Controls -->
                        <HBox spacing="10">
                            <Button fx:id="btnPrevMonth" text="◀" onAction="#handlePrevMonth"
                                    style="-fx-background-color: transparent; -fx-text-fill: #e6a84c; -fx-cursor: hand; -fx-border-width: 0;"/>
                            <Label fx:id="lblCalendarMonth" text="October 2025" HBox.hgrow="ALWAYS"
                                   style="-fx-font-size: 13px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                            <Button fx:id="btnNextMonth" text="▶" onAction="#handleNextMonth"
                                    style="-fx-background-color: transparent; -fx-text-fill: #e6a84c; -fx-cursor: hand; -fx-border-width: 0;"/>
                        </HBox>
                        
                        <!-- Calendar Grid -->
                        <GridPane fx:id="calendarGrid" hgap="3" vgap="3"/>
                    </VBox>
                    
                    <!-- Add-ons Section -->
                    <VBox spacing="12" style="-fx-border-color: #f5d99f; -fx-border-width: 3; -fx-border-radius: 15; -fx-padding: 20;">
                        <Label text="ADD ONS" 
                               style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #333; -fx-background-color: #f5d99f; -fx-padding: 8 15; -fx-background-radius: 20;"/>
                        
                        <!-- Add-ons Carousel Container -->
                        <HBox spacing="10">
                            <Button text="◀" onAction="#handlePrevAddon"
                                    style="-fx-background-color: transparent; -fx-text-fill: #e6a84c; -fx-cursor: hand; -fx-border-width: 0;"/>
                            
                            <VBox fx:id="addonDisplay" spacing="8" HBox.hgrow="ALWAYS">
                                <ImageView fx:id="addonImage" fitWidth="150" fitHeight="150" preserveRatio="true"/>
                                <Label fx:id="lblAddonName" text="Petticoat" 
                                       style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #333;"/>
                                <Label fx:id="lblAddonSize" text="Fits S-L" 
                                       style="-fx-font-size: 12px; -fx-text-fill: #666;"/>
                            </VBox>
                            
                            <Button text="▶" onAction="#handleNextAddon"
                                    style="-fx-background-color: transparent; -fx-text-fill: #e6a84c; -fx-cursor: hand; -fx-border-width: 0;"/>
                        </HBox>
                    </VBox>
                    
                </VBox>
                
            </HBox>
            
        </VBox>
    </ScrollPane>
    
</VBox>
