<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>

<!-- Root container: vertical layout for all sections -->
<VBox xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.cosplay.ui.controllers.HomeController"
      spacing="10" alignment="TOP_CENTER" style="-fx-background-color: #FFF;"
      minWidth="600" minHeight="400">

    <!-- ========================== -->
    <!-- Navigation Bar (Top Menu) -->
    <!-- ========================== -->


    <fx:include source="/com/cosplay/ui/views/components/NavBar.fxml" fx:id="navBar" />

    <!-- ========================== -->
    <!-- Event Banner Section -->
    <!-- ========================== -->
    <HBox fx:id="eventBanner" spacing="15" alignment="CENTER_LEFT" managed="false" visible="false"
          style="-fx-background-color: #fff4ed; -fx-padding: 15 20; -fx-border-color: #d47f47; -fx-border-width: 0 0 2 0;">
        
        <VBox spacing="3" HBox.hgrow="ALWAYS">
            <Label fx:id="eventBannerTitle" text="Event Title" 
                   style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-text-fill: #d47f47;"/>
            <Label fx:id="eventBannerMessage" text="Event message goes here" 
                   wrapText="true" maxWidth="1000"
                   style="-fx-font-size: 14px; -fx-text-fill: #b05e2f;"/>
        </VBox>
        
        <Button fx:id="btnDismissBanner" text="âœ•" 
                style="-fx-background-color: transparent; -fx-text-fill: #d47f47; -fx-font-size: 16px; -fx-cursor: hand; -fx-padding: 5 10;"
                onAction="#dismissBanner"/>
    </HBox>

    <!-- ========================== -->
    <!-- Featured Sets Section -->
    <!-- ========================== -->
    <VBox alignment="CENTER" spacing="10" style="-fx-background-color: #f5c7a9; -fx-padding: 20;" VBox.vgrow="ALWAYS">
        <Label text="Featured Sets" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;"/>

        <!-- Cards Grid -->
        <HBox spacing="15" alignment="CENTER" HBox.hgrow="ALWAYS" style="-fx-padding: 10;">
            <!-- Each card is a VBox with image and caption -->
            <VBox alignment="CENTER" spacing="5" style="-fx-background-color: white; -fx-padding: 10; -fx-border-radius: 10; -fx-background-radius: 10;" HBox.hgrow="ALWAYS" maxWidth="250" minWidth="150">
                <ImageView fx:id="set1Image" fitHeight="180" fitWidth="120" preserveRatio="true"/>
                <Label fx:id="set1Title" text="Featured #1" style="-fx-text-fill: #d47f47; -fx-font-weight: bold;" wrapText="true" maxWidth="200" alignment="CENTER"/>
            </VBox>

            <VBox alignment="CENTER" spacing="5" style="-fx-background-color: white; -fx-padding: 10; -fx-border-radius: 10; -fx-background-radius: 10;" HBox.hgrow="ALWAYS" maxWidth="250" minWidth="150">
                <ImageView fx:id="set2Image" fitHeight="180" fitWidth="120" preserveRatio="true"/>
                <Label fx:id="set2Title" text="Featured #2" style="-fx-text-fill: #d47f47; -fx-font-weight: bold;" wrapText="true" maxWidth="200" alignment="CENTER"/>
            </VBox>

            <VBox alignment="CENTER" spacing="5" style="-fx-background-color: white; -fx-padding: 10; -fx-border-radius: 10; -fx-background-radius: 10;" HBox.hgrow="ALWAYS" maxWidth="250" minWidth="150">
                <ImageView fx:id="set3Image" fitHeight="180" fitWidth="120" preserveRatio="true"/>
                <Label fx:id="set3Title" text="Featured #3" style="-fx-text-fill: #d47f47; -fx-font-weight: bold;" wrapText="true" maxWidth="200" alignment="CENTER"/>
            </VBox>

            <VBox alignment="CENTER" spacing="5" style="-fx-background-color: white; -fx-padding: 10; -fx-border-radius: 10; -fx-background-radius: 10;" HBox.hgrow="ALWAYS" maxWidth="250" minWidth="150">
                <ImageView fx:id="set4Image" fitHeight="180" fitWidth="120" preserveRatio="true"/>
                <Label fx:id="set4Title" text="Featured #4" style="-fx-text-fill: #d47f47; -fx-font-weight: bold;" wrapText="true" maxWidth="200" alignment="CENTER"/>
            </VBox>
        </HBox>
    </VBox>

</VBox>