<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<VBox xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.cosplay.ui.controllers.AdminController"
      spacing="0" alignment="TOP_LEFT" style="-fx-background-color: #f5f5f5;"
      minWidth="800" minHeight="600">
    
    <!-- Main Content Area -->
    <HBox VBox.vgrow="ALWAYS" spacing="0">
        <!-- Sidebar Navigation -->
        <VBox spacing="0" style="-fx-background-color: #f79e6b; -fx-padding: 20;" minWidth="250">
            <HBox spacing="10" alignment="CENTER_LEFT" style="-fx-padding: 20;">
                <Label text="ðŸ‘‘" style="-fx-font-size: 24px;"/>
                <Label text="Kumila Rentals" style="-fx-font-size: 18px; -fx-font-weight: bold; -fx-text-fill: white;"/>
            </HBox>
            
            <Button fx:id="btnHome" text="ðŸ  Home" onAction="#goHome" 
                    styleClass="sidebar-button" maxWidth="Infinity" alignment="CENTER_LEFT" 
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 15; -fx-cursor: hand;"/>
            
            <Button fx:id="btnCatalog" text="ðŸ‘— Inventory" onAction="#showCatalog" 
                    styleClass="sidebar-button active" maxWidth="Infinity" alignment="CENTER_LEFT"
                    style="-fx-background-color: #d4a574; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 15; -fx-font-weight: bold; -fx-cursor: hand;"/>
            
            <Button fx:id="btnOrders" text="ðŸ“‹ Orders" onAction="#showOrders" 
                    styleClass="sidebar-button" maxWidth="Infinity" alignment="CENTER_LEFT"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 15; -fx-cursor: hand;"/>
            
            <Button fx:id="btnFeatured" text="â­ Featured" onAction="#showFeatured" 
                    styleClass="sidebar-button" maxWidth="Infinity" alignment="CENTER_LEFT"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 15; -fx-cursor: hand;"/>
            
            <Button fx:id="btnEvents" text="ðŸ“¢ Event Banners" onAction="#showEventBanners" 
                    styleClass="sidebar-button" maxWidth="Infinity" alignment="CENTER_LEFT"
                    style="-fx-background-color: transparent; -fx-text-fill: white; -fx-font-size: 16px; -fx-padding: 15; -fx-cursor: hand;"/>
        </VBox>
        
        <!-- Content Area -->
        <VBox HBox.hgrow="ALWAYS" spacing="20" style="-fx-padding: 30; -fx-background-color: #f5f5f5;">
            
            <!-- Header Section -->
            <HBox alignment="CENTER_LEFT" spacing="20">
                <Label fx:id="lblSectionTitle" text="Catalog" 
                       style="-fx-font-size: 32px; -fx-font-weight: bold; -fx-text-fill: #f79e6b;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="btnAddRental" text="Add Rental" onAction="#addCosplay"
                        style="-fx-background-color: #f79e6b; -fx-text-fill: white; -fx-font-size: 14px; -fx-padding: 10 20; -fx-background-radius: 20; -fx-cursor: hand;"/>
            </HBox>
            
            <!-- Table Section -->
            <ScrollPane fitToWidth="true" fitToHeight="true" VBox.vgrow="ALWAYS" 
                        style="-fx-background-color: transparent; -fx-border-color: transparent;">
                <VBox spacing="10" style="-fx-background-color: white; -fx-padding: 20; -fx-background-radius: 8;">
                    
                    <!-- Table Header (Dynamic) -->
                    <HBox fx:id="tableHeader" spacing="20" alignment="CENTER_LEFT" style="-fx-padding: 10; -fx-background-color: #f9f9f9;">
                        <!-- Header labels will be dynamically added based on current section -->
                    </HBox>
                    
                    <Separator/>
                    
                    <!-- Table Rows -->
                    <ListView fx:id="cosplayListView" VBox.vgrow="ALWAYS" 
                              style="-fx-background-color: transparent; -fx-border-color: transparent;"/>
                    
                </VBox>
            </ScrollPane>
            
        </VBox>
    </HBox>
</VBox>

